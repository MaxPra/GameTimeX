<Window
    x:Class="GameTimeX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameTimeX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GameTimeX"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="Window_Closed"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    Style="{StaticResource DefaultWindowStyle}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="IconOnlyButton"
            BasedOn="{StaticResource NormalGuiButton}"
            TargetType="Button">
            <Setter Property="Width" Value="56" />
            <Setter Property="Height" Value="{StaticResource FormControlHeight}" />
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="FormTextBox_Local"
            BasedOn="{StaticResource FormTextBox}"
            TargetType="TextBox">
            <Setter Property="Height" Value="{StaticResource FormControlHeight}" />
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="PaneFrameStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="#0F000000" />
            <Setter Property="BorderBrush" Value="#20FFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Storyboard x:Key="StartStopButtonHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonHoverColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonDefaultColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonHoverMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonHoverMonitoringColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonDefaultMonitoringColor}"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Border
        Padding="0"
        Background="#2F2F2F"
        BorderBrush="{DynamicResource ButtonDefaultBrush}"
        BorderThickness="1"
        CornerRadius="12"
        SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                x:Name="titleBar"
                Grid.Row="0"
                Background="Black"
                ClipToBounds="True"
                CornerRadius="12,12,0,0"
                MouseDown="titleBar_MouseDown" />
            <TextBlock
                Grid.Row="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Forte"
                FontSize="15"
                Foreground="White"
                Text="GameTimeX" />

            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnMinimize"
                    Width="40"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btnMinimize_Click"
                    Content="🗕"
                    Foreground="White"
                    MouseEnter="btnMinimize_MouseEnter"
                    MouseLeave="btnMinimize_MouseLeave"
                    Style="{StaticResource NoMouseOverButtonStyle}" />
                <Button
                    x:Name="btnClose"
                    Width="40"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btnClose_Click"
                    Content="X"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,12,0,0"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Grid x:Name="grdContent" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtSearchBar"
                        Grid.Column="0"
                        Width="420"
                        MaxWidth="520"
                        Style="{StaticResource SearchTextBox}"
                        Tag="Search for games here"
                        TextChanged="txtSearchBar_TextChanged" />

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ToggleButton
                            x:Name="btnPlayableFilter"
                            Grid.Column="0"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnPlayableFilter_Click"
                            Style="{StaticResource MenuBarToggleButton}"
                            ToolTip="Show only playable game profiles">
                            <Image Source="{StaticResource playable}" />
                        </ToggleButton>

                        <Button
                            x:Name="btnMode"
                            Grid.Column="1"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnMode_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}"
                            Visibility="Hidden">
                            <Image x:Name="imgMode" Source="{StaticResource ModeTiles}" />
                        </Button>

                        <Button
                            x:Name="btnNew"
                            Grid.Column="2"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnNew_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource CreateNewImageSource}" />
                        </Button>

                        <Button
                            x:Name="btnDelete"
                            Grid.Column="3"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnDelete_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource DeleteImageSource}" />
                        </Button>

                        <Button
                            x:Name="btnProperties"
                            Grid.Column="4"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnProperties_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource PropertiesSource}" />
                        </Button>

                        <Button
                            x:Name="btnSettings"
                            Grid.Column="5"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnSettings_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource SettingsImageSource}" />
                        </Button>
                    </Grid>
                </Grid>

                <ScrollViewer
                    x:Name="scrollBar"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    HorizontalScrollBarVisibility="Hidden"
                    PreviewMouseWheel="scrollBar_PreviewMouseWheel"
                    VerticalScrollBarVisibility="Auto">
                    <DataGrid
                        x:Name="dgProfiles"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="{Binding ElementName=scrollBar, Path=ActualWidth}"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        GridLinesVisibility="Horizontal"
                        IsReadOnly="True"
                        ItemsSource="{Binding Profile}"
                        RowHeaderWidth="0"
                        SelectionChanged="dgProfiles_SelectionChanged"
                        SelectionMode="Single"
                        SelectionUnit="FullRow">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#289afc" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                                <Setter Property="BorderThickness" Value="0,0,0,2" />
                            </Style>

                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Height" Value="50" />
                                <Setter Property="Background" Value="#333333" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="30" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding State}" Value="State1">
                                        <Setter Property="Background" Value="#333333" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding State}" Value="State2">
                                        <Setter Property="Background" Value="#008ae6" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="{x:Type DataGrid}">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="HorizontalGridLinesBrush" Value="#292928" />
                                <Setter Property="Background" Value="#333333" />
                            </Style>

                            <Style x:Key="DisableSelection" TargetType="DataGridCell">
                                <Setter Property="Focusable" Value="False" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Style>

                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#008ae6" />
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="0"
                                Binding="{Binding PID}"
                                Header="PID"
                                Visibility="Hidden" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding ProfileName}"
                                Header="Name" />
                        </DataGrid.Columns>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </ScrollViewer>

                <Border
                    x:Name="tilesAreaFrame"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Style="{StaticResource PaneFrameStyle}">
                    <ScrollViewer
                        x:Name="scrollBarTiles"
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="grdGameProfiles" Margin="12" />
                    </ScrollViewer>
                </Border>

                <!--  Lade-Overlay  -->
                <Grid
                    x:Name="loadingOverlay"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Panel.ZIndex="30"
                    Opacity="0"
                    Visibility="Collapsed">
                    <Border Style="{StaticResource PaneFrameStyle}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <!--  Spinner  -->
                            <Grid
                                Width="42"
                                Height="42"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Ellipse
                                    Width="42"
                                    Height="42"
                                    Stroke="#33FFFFFF"
                                    StrokeThickness="4" />
                                <Path
                                    Data="M21,2 A19,19 0 0 1 40,21"
                                    Stroke="#289afc"
                                    StrokeThickness="4">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="rtSpinner" CenterX="21" CenterY="21" />
                                    </Path.RenderTransform>
                                </Path>

                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation
                                                    RepeatBehavior="Forever"
                                                    Storyboard.TargetName="rtSpinner"
                                                    Storyboard.TargetProperty="Angle"
                                                    From="0"
                                                    To="360"
                                                    Duration="0:0:0.9" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                            </Grid>


                        </StackPanel>
                    </Border>
                </Grid>



                <Grid
                    x:Name="emptyStateOverlay"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Panel.ZIndex="10"
                    Visibility="Collapsed">
                    <Border Style="{StaticResource PaneFrameStyle}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <Image
                                Width="140"
                                Height="140"
                                Margin="0,0,0,12"
                                Opacity="0.9"
                                Source="{DynamicResource EmptyStateImage}"
                                Stretch="Uniform" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="No games to show" />
                            <TextBlock
                                Margin="0,6,0,0"
                                HorizontalAlignment="Center"
                                FontSize="13"
                                Foreground="#CCFFFFFF"
                                Text="Add a game or adjust your filters." />
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid
                    x:Name="grdGameInfo"
                    Grid.Row="1"
                    Grid.Column="1">
                    <Grid.Resources>
                        <LinearGradientBrush x:Key="CardBg" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#3A3A3A" />
                            <GradientStop Offset="1" Color="#2F2F2F" />
                        </LinearGradientBrush>
                        <SolidColorBrush x:Key="StrokeBrush" Color="#26FFFFFF" />
                        <SolidColorBrush
                            x:Key="AccentPillBrush"
                            Opacity="0.15"
                            Color="{StaticResource ButtonDefaultColor}" />

                        <SolidColorBrush x:Key="DetailPanelBackground" Color="#272727" />
                        <SolidColorBrush x:Key="DetailPanelStroke" Color="#28FFFFFF" />

                        <Style x:Key="PillBox" TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource AccentPillBrush}" />
                            <Setter Property="CornerRadius" Value="6" />
                            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Padding" Value="10,6" />
                            <Setter Property="MinHeight" Value="36" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                        </Style>

                        <Style
                            x:Key="PillIconButton"
                            BasedOn="{StaticResource NoMouseOverButtonStyle}"
                            TargetType="Button">
                            <Setter Property="Width" Value="18" />
                            <Setter Property="Height" Value="18" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="10,0,0,0" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </Grid.Resources>

                    <Border
                        Margin="10"
                        Background="{StaticResource DetailPanelBackground}"
                        BorderBrush="{StaticResource DetailPanelStroke}"
                        BorderThickness="1"
                        CornerRadius="12"
                        SnapsToDevicePixels="True" />

                    <Border
                        Margin="0,10,0,10"
                        BorderBrush="#20FFFFFF"
                        BorderThickness="1,0,0,0" />

                    <Grid Margin="22">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,18">
                            <Grid MaxWidth="{Binding ElementName=grdGameInfo, Path=ActualWidth}" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="lblGameName"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="N/A"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">
                                    <TextBlock.ToolTip>
                                        <ToolTip
                                            Background="#333333"
                                            BorderThickness="1"
                                            Foreground="White">
                                            <TextBlock Name="lblToolTipGameName" Text="N/A" />
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>

                                <Button
                                    x:Name="btnEditProfileName"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Click="btnEditProfileName_Click"
                                    Style="{StaticResource EditCircleIconButton}" />
                            </Grid>
                        </Grid>

                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,8"
                            Padding="10"
                            Background="{StaticResource CardBg}"
                            BorderBrush="{StaticResource StrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="10">
                            <Border ClipToBounds="True" CornerRadius="8">
                                <Grid>
                                    <Image
                                        x:Name="currProfileImage"
                                        Width="Auto"
                                        Source="{StaticResource MyImageSource}"
                                        Stretch="Uniform">
                                        <Image.Effect>
                                            <DropShadowEffect
                                                BlurRadius="10"
                                                Direction="315"
                                                ShadowDepth="5"
                                                Color="Black" />
                                        </Image.Effect>
                                    </Image>

                                    <Rectangle Height="48" VerticalAlignment="Top">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#66FFFFFF" />
                                                <GradientStop Offset="0.35" Color="#33FFFFFF" />
                                                <GradientStop Offset="1" Color="#00FFFFFF" />
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <Rectangle
                                        Height="1"
                                        VerticalAlignment="Top"
                                        Fill="#FFFFFF"
                                        Opacity="0.35" />
                                </Grid>
                            </Border>
                        </Border>

                        <TextBlock
                            x:Name="lblChangeProfileImage"
                            Grid.Row="2"
                            Margin="0,0,0,18"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            PreviewMouseDown="lblChangeProfileImage_PreviewMouseDown"
                            Style="{StaticResource ChangeImageStyle}"
                            Text="Change Image"
                            TextDecorations="Underline" />

                        <Grid Grid.Row="3" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="12" />
                                <RowDefinition x:Name="rowPlaythrough" Height="Auto" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="24" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="#DDFFFFFF"
                                Text="Game time:" />
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Style="{StaticResource PillBox}">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock
                                        x:Name="lblGameTime"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="N/A" />
                                    <Button x:Name="btnGameTimeInfo" Style="{StaticResource PillIconButton}">
                                        <Button.ToolTip>
                                            <ToolTip
                                                Background="#333333"
                                                BorderThickness="1"
                                                Foreground="White">
                                                <TextBlock Name="lblToolTipGameTimeText">0 Minutes</TextBlock>
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Image
                                            Width="14"
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="{StaticResource GameInfoSource}" />
                                    </Button>
                                </StackPanel>
                            </Border>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="#DDFFFFFF"
                                Text="Playthrough:" />
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Style="{StaticResource PillBox}">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock
                                        x:Name="lblGameTimeNewPlaythrough"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="N/A" />
                                    <Button x:Name="btnGameTimeNewPlaythrough" Style="{StaticResource PillIconButton}">
                                        <Button.ToolTip>
                                            <ToolTip
                                                Background="#333333"
                                                BorderThickness="1"
                                                Foreground="White">
                                                <TextBlock Name="lblToolTipGameTimeTextNewPlaythrough">0 Minutes</TextBlock>
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Image
                                            Width="14"
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="{StaticResource GameInfoSource}" />
                                    </Button>
                                </StackPanel>
                            </Border>

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#DDFFFFFF"
                                Text="First time played:" />
                            <TextBlock
                                x:Name="lblFirstTimePlayed"
                                Grid.Row="4"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Text="N/A" />

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#DDFFFFFF"
                                Text="Last time played:" />
                            <TextBlock
                                x:Name="lblLastTimePlayed"
                                Grid.Row="6"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Text="N/A" />

                            <StackPanel
                                Grid.Row="8"
                                Grid.ColumnSpan="2"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <Button
                                    x:Name="btnLaunchSteamGame"
                                    Margin="0,0,0,10"
                                    Click="btnLaunchSteamGame_Click"
                                    Style="{StaticResource SteamPlayButton}">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Image
                                            Width="18"
                                            Height="18"
                                            Margin="0,0,6,0"
                                            VerticalAlignment="Center"
                                            Source="{StaticResource steamImage}" />

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Cursor=""
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="Launch game" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    x:Name="btnStartStopMonitoring"
                                    Width="220"
                                    Height="50"
                                    BorderBrush="Black"
                                    Click="btnStartStopMonitoring_Click"
                                    Content="Start Monitoring"
                                    FontSize="20"
                                    Foreground="White"
                                    MouseEnter="btnStartStopMonitoring_MouseEnter"
                                    MouseLeave="btnStartStopMonitoring_MouseLeave"
                                    Style="{StaticResource StartStopMonitoringButton}" />
                                <TextBlock
                                    x:Name="txtGameSession"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Visibility="Hidden">
                                    Session: 0 minutes
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
