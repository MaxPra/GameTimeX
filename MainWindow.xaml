<Window x:Class="GameTimeX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTimeX"
        mc:Ignorable="d"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="GameTimeX"
        Height="800"
        Width="1200"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Style="{StaticResource DefaultWindowStyle}">

    <Window.Resources>
        <Style x:Key="IconOnlyButton" TargetType="Button" BasedOn="{StaticResource NormalGuiButton}">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="{StaticResource FormControlHeight}"/>
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FormTextBox_Local" TargetType="TextBox" BasedOn="{StaticResource FormTextBox}">
            <Setter Property="Height" Value="{StaticResource FormControlHeight}"/>
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PaneFrameStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#0F000000"/>
            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Storyboard x:Key="StartStopButtonHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation Storyboard.TargetName="btnStartStopMonitoring"
                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                            To="{StaticResource ButtonHoverColor}"
                            Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation Storyboard.TargetName="btnStartStopMonitoring"
                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                            To="{StaticResource ButtonDefaultColor}"
                            Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="StartStopButtonHoverMonitoring" Duration="00:00:4">
            <ColorAnimation Storyboard.TargetName="btnStartStopMonitoring"
                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                            To="{StaticResource ButtonHoverMonitoringColor}"
                            Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverMonitoring" Duration="00:00:4">
            <ColorAnimation Storyboard.TargetName="btnStartStopMonitoring"
                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                            To="{StaticResource ButtonDefaultMonitoringColor}"
                            Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            SnapsToDevicePixels="True"
            Padding="0"
            CornerRadius="12"
            Background="#2F2F2F">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    x:Name="titleBar"
                    Background="Black"
                    CornerRadius="12,12,0,0"
                    ClipToBounds="True" MouseDown="titleBar_MouseDown"/>
            <TextBlock Grid.Row="0"
                       Text="GameTimeX"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0"
                       Foreground="White"
                       FontFamily="Forte"
                       FontSize="15"/>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnMinimize" Content="🗕" Width="40" Height="30"
                        BorderBrush="Transparent" Background="Transparent"
                        Click="btnMinimize_Click" Foreground="White"
                        MouseEnter="btnMinimize_MouseEnter" Style="{StaticResource NoMouseOverButtonStyle}"
                        MouseLeave="btnMinimize_MouseLeave"/>
                <Button x:Name="btnClose" Content="X" Width="40" Height="30"
                        BorderBrush="Transparent" Background="Transparent"
                        Click="btnClose_Click" Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="0,12,0,0"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Grid Grid.Row="1" x:Name="grdContent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="30*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtSearchBar"
                             Grid.Column="0"
                             Width="420" MaxWidth="520"
                             Style="{StaticResource SearchTextBox}"
                             Tag="Search for games here"
                             TextChanged="txtSearchBar_TextChanged"/>

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ToggleButton Grid.Column="0" x:Name="btnPlayableFilter"
                                      Height="{StaticResource FormControlHeight}" Width="36"
                                      Background="Transparent" BorderBrush="Transparent"
                                      Style="{StaticResource MenuBarToggleButton}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Click="btnPlayableFilter_Click"
                                      ToolTip="Show only playable game profiles">
                            <Image Source="{StaticResource playable}" />
                        </ToggleButton>

                        <Button Grid.Column="1" x:Name="btnMode"
                                Height="{StaticResource FormControlHeight}" Width="36"
                                Background="Transparent" BorderBrush="Transparent"
                                Click="btnMode_Click" Foreground="White"
                                Style="{StaticResource MenuBarButton}" Visibility="Hidden"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="imgMode" Source="{StaticResource ModeTiles}" />
                        </Button>

                        <Button Grid.Column="2" x:Name="btnNew"
                                Height="{StaticResource FormControlHeight}" Width="36"
                                Background="Transparent" BorderBrush="Transparent"
                                Click="btnNew_Click" Foreground="White"
                                Style="{StaticResource MenuBarButton}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource CreateNewImageSource}"/>
                        </Button>

                        <Button Grid.Column="3" x:Name="btnDelete"
                                Height="{StaticResource FormControlHeight}" Width="36"
                                Background="Transparent" BorderBrush="Transparent"
                                Click="btnDelete_Click" Foreground="White"
                                Style="{StaticResource MenuBarButton}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource DeleteImageSource}" />
                        </Button>

                        <Button Grid.Column="4" x:Name="btnProperties"
                                Height="{StaticResource FormControlHeight}" Width="36"
                                Background="Transparent" BorderBrush="Transparent"
                                Click="btnProperties_Click" Foreground="White"
                                Style="{StaticResource MenuBarButton}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource PropertiesSource}" />
                        </Button>

                        <Button Grid.Column="5" x:Name="btnSettings"
                                Height="{StaticResource FormControlHeight}" Width="36"
                                Background="Transparent" BorderBrush="Transparent"
                                Click="btnSettings_Click" Foreground="White"
                                Style="{StaticResource MenuBarButton}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource SettingsImageSource}" />
                        </Button>
                    </Grid>
                </Grid>

                <ScrollViewer PreviewMouseWheel="scrollBar_PreviewMouseWheel"
                              Margin="10"
                              Grid.Row="1" Grid.Column="0"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalAlignment="Stretch"
                              x:Name="scrollBar">
                    <DataGrid Width="{Binding ElementName=scrollBar, Path=ActualWidth}"
                              SelectionUnit="FullRow"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              Grid.Row="1"
                              HorizontalAlignment="Stretch"
                              Grid.Column="0" x:Name="dgProfiles"
                              ItemsSource="{Binding Profile}"
                              IsReadOnly="True" AutoGenerateColumns="False"
                              SelectionChanged="dgProfiles_SelectionChanged"
                              RowHeaderWidth="0"
                              VerticalContentAlignment="Center">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#289afc"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Height" Value="30"/>
                                <Setter Property="Padding" Value="10,0,0,0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Style>

                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Height" Value="50"/>
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="30"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding State}" Value="State1">
                                        <Setter Property="Background" Value="#333333"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding State}" Value="State2">
                                        <Setter Property="Background" Value="#008ae6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="{x:Type DataGrid}">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalGridLinesBrush" Value="#292928"/>
                                <Setter Property="Background" Value="#333333"/>
                            </Style>

                            <Style x:Key="DisableSelection" TargetType="DataGridCell">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#008ae6"/>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PID" Width="0" Binding="{Binding PID}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="Name" Width="*" Binding="{Binding ProfileName}"/>
                        </DataGrid.Columns>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </ScrollViewer>

                <Border x:Name="tilesAreaFrame"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        Style="{StaticResource PaneFrameStyle}">
                    <ScrollViewer x:Name="scrollBarTiles"
                                  Margin="0"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalAlignment="Stretch">
                        <Grid x:Name="grdGameProfiles" Margin="12"/>
                    </ScrollViewer>
                </Border>

                <Grid x:Name="emptyStateOverlay"
                      Grid.Row="1"
                      Grid.Column="0"
                      Margin="10"
                      Visibility="Collapsed"
                      Panel.ZIndex="10">
                    <Border Style="{StaticResource PaneFrameStyle}">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                            <Image Source="{DynamicResource EmptyStateImage}"
                                   Width="140"
                                   Height="140"
                                   Stretch="Uniform"
                                   Margin="0,0,0,12"
                                   Opacity="0.9"/>
                            <TextBlock Text="No games to show"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Add a game or adjust your filters."
                                       Foreground="#CCFFFFFF"
                                       FontSize="13"
                                       Margin="0,6,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1" x:Name="grdGameInfo">
                    <Grid.Resources>
                        <LinearGradientBrush x:Key="CardBg" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#3A3A3A" Offset="0"/>
                            <GradientStop Color="#2F2F2F" Offset="1"/>
                        </LinearGradientBrush>
                        <SolidColorBrush x:Key="StrokeBrush" Color="#26FFFFFF"/>
                        <SolidColorBrush x:Key="AccentPillBrush" Color="{StaticResource ButtonDefaultColor}" Opacity="0.15"/>

                        <SolidColorBrush x:Key="DetailPanelBackground" Color="#272727"/>
                        <SolidColorBrush x:Key="DetailPanelStroke" Color="#28FFFFFF"/>

                        <Style x:Key="PillBox" TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource AccentPillBrush}"/>
                            <Setter Property="CornerRadius" Value="6"/>
                            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="MinHeight" Value="36"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                        </Style>

                        <Style x:Key="PillIconButton" TargetType="Button" BasedOn="{StaticResource NoMouseOverButtonStyle}">
                            <Setter Property="Width" Value="18"/>
                            <Setter Property="Height" Value="18"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </Grid.Resources>

                    <Border Background="{StaticResource DetailPanelBackground}"
                            BorderBrush="{StaticResource DetailPanelStroke}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Margin="10"
                            SnapsToDevicePixels="True"/>

                    <Border BorderBrush="#20FFFFFF" BorderThickness="1,0,0,0" Margin="0,10,0,10"/>

                    <Grid Margin="22">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,18">
                            <Grid HorizontalAlignment="Center"
                                  MaxWidth="{Binding ElementName=grdGameInfo, Path=ActualWidth}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           x:Name="lblGameName"
                                           Text="N/A"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip Background="#333333"
                                                 BorderThickness="1"
                                                 Foreground="White">
                                            <TextBlock Name="lblToolTipGameName" Text="N/A"/>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>

                                <Button Grid.Column="1"
                                        x:Name="btnEditProfileName"
                                        Click="btnEditProfileName_Click"
                                        Style="{StaticResource EditCircleIconButton}"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <Border Grid.Row="1" Background="{StaticResource CardBg}" CornerRadius="10"
                                BorderBrush="{StaticResource StrokeBrush}" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                            <Border CornerRadius="8" ClipToBounds="True">
                                <Grid>
                                    <Image Stretch="Uniform"
                                           Width="Auto"
                                           x:Name="currProfileImage"
                                           Source="{StaticResource MyImageSource}">
                                        <Image.Effect>
                                            <DropShadowEffect Color="Black" Direction="315" BlurRadius="10" ShadowDepth="5"/>
                                        </Image.Effect>
                                    </Image>

                                    <Rectangle VerticalAlignment="Top" Height="48">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#66FFFFFF" Offset="0"/>
                                                <GradientStop Color="#33FFFFFF" Offset="0.35"/>
                                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <Rectangle VerticalAlignment="Top" Height="1" Opacity="0.35" Fill="#FFFFFF"/>
                                </Grid>
                            </Border>
                        </Border>

                        <TextBlock Grid.Row="2"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,18"
                                   x:Name="lblChangeProfileImage"
                                   Foreground="White"
                                   Text="Change Image"
                                   TextDecorations="Underline"
                                   PreviewMouseDown="lblChangeProfileImage_PreviewMouseDown"
                                   Style="{StaticResource ChangeImageStyle}"/>

                        <Grid Grid.Row="3" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition x:Name="rowPlaythrough" Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Game time:" Grid.Row="0" Grid.Column="0"
                                       HorizontalAlignment="Left" Foreground="#DDFFFFFF"
                                       FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource PillBox}" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="N/A" x:Name="lblGameTime"
                                               Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                                    <Button x:Name="btnGameTimeInfo" Style="{StaticResource PillIconButton}">
                                        <Button.ToolTip>
                                            <ToolTip Background="#333333" BorderThickness="1" Foreground="White">
                                                <TextBlock Name="lblToolTipGameTimeText">0 Minutes</TextBlock>
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Image Source="{StaticResource GameInfoSource}" Width="14" Height="14"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Playthrough:" Grid.Row="2" Grid.Column="0"
                                       HorizontalAlignment="Left" Foreground="#DDFFFFFF"
                                       FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource PillBox}" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="N/A" x:Name="lblGameTimeNewPlaythrough"
                                               Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                                    <Button x:Name="btnGameTimeNewPlaythrough" Style="{StaticResource PillIconButton}">
                                        <Button.ToolTip>
                                            <ToolTip Background="#333333" BorderThickness="1" Foreground="White">
                                                <TextBlock Name="lblToolTipGameTimeTextNewPlaythrough">0 Minutes</TextBlock>
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Image Source="{StaticResource GameInfoSource}" Width="14" Height="14"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="First time played:" Grid.Row="4" Grid.Column="0"
                                       HorizontalAlignment="Left" Foreground="#DDFFFFFF"
                                       FontSize="14" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="N/A" Grid.Row="4" Grid.Column="1" x:Name="lblFirstTimePlayed"
                                       HorizontalAlignment="Left" Foreground="White"
                                       FontSize="14" VerticalAlignment="Center"/>

                            <TextBlock Text="Last time played:" Grid.Row="6" Grid.Column="0"
                                       HorizontalAlignment="Left" Foreground="#DDFFFFFF"
                                       FontSize="14" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="N/A" Grid.Row="6" Grid.Column="1" x:Name="lblLastTimePlayed"
                                       HorizontalAlignment="Left" Foreground="White"
                                       FontSize="14" VerticalAlignment="Center"/>

                            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Vertical"
                                        Margin="0,0,0,0" HorizontalAlignment="Center">
                                <Button x:Name="btnStartStopMonitoring" Content="Start Monitoring" Width="220" Height="50"
                                        BorderBrush="Black"
                                        Click="btnStartStopMonitoring_Click" Foreground="White"
                                        MouseEnter="btnStartStopMonitoring_MouseEnter"
                                        MouseLeave="btnStartStopMonitoring_MouseLeave"
                                        FontSize="20"
                                        Style="{StaticResource StartStopMonitoringButton}"/>
                                <TextBlock x:Name="txtGameSession"
                                           HorizontalAlignment="Center" Margin="0,12,0,0"
                                           Foreground="White" Visibility="Hidden">
                                    Session: 0 minutes
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
