<Window
    x:Class="GameTimeX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameTimeX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GameTimeX"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="Window_Closed"
    FontFamily="{DynamicResource AppFontFamily}"
    FontSize="13"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    Style="{StaticResource DefaultWindowStyle}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <FontFamily x:Key="AppFontFamily">Segoe UI Variable Text, Segoe UI</FontFamily>

        <Color x:Key="AccentBlue">#289AFC</Color>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F2FFFFFF" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#C8FFFFFF" />

        <SolidColorBrush x:Key="WindowStrokeBrush" Color="#22FFFFFF" />
        <SolidColorBrush x:Key="PanelStrokeBrush" Color="#1EFFFFFF" />

        <LinearGradientBrush x:Key="WindowBaseGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#FF0B0D10" />
            <GradientStop Offset="0.45" Color="#FF0A0C10" />
            <GradientStop Offset="1" Color="#FF090A0E" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WindowColorWashGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="#2218232B" />
            <GradientStop Offset="0.45" Color="#1A3A2431" />
            <GradientStop Offset="0.75" Color="#183A1F1A" />
            <GradientStop Offset="1" Color="#26231D18" />
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="WindowVignetteBrush" Center="0.52,0.50" GradientOrigin="0.52,0.50" RadiusX="0.78" RadiusY="0.78">
            <GradientStop Offset="0" Color="#00000000" />
            <GradientStop Offset="0.62" Color="#00000000" />
            <GradientStop Offset="1" Color="#CC000000" />
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="WindowSoftHighlightBrush" Center="0.80,0.35" GradientOrigin="0.80,0.35" RadiusX="0.65" RadiusY="0.65">
            <GradientStop Offset="0" Color="#143A2A40" />
            <GradientStop Offset="0.35" Color="#0F289AFC" />
            <GradientStop Offset="1" Color="#00000000" />
        </RadialGradientBrush>

        <DrawingBrush
            x:Key="SoftNoiseBrush"
            Opacity="0.045"
            TileMode="Tile"
            Viewport="0,0,160,160"
            ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#FFFFFFFF">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="12,18,1,1" />
                                <RectangleGeometry Rect="28,62,1,1" />
                                <RectangleGeometry Rect="64,20,1,1" />
                                <RectangleGeometry Rect="88,78,1,1" />
                                <RectangleGeometry Rect="104,44,1,1" />
                                <RectangleGeometry Rect="140,28,1,1" />
                                <RectangleGeometry Rect="18,132,1,1" />
                                <RectangleGeometry Rect="46,112,1,1" />
                                <RectangleGeometry Rect="118,120,1,1" />
                                <RectangleGeometry Rect="150,96,1,1" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <DrawingBrush x:Key="WindowBackgroundBrush" Stretch="Fill">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="{StaticResource WindowBaseGradient}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource WindowColorWashGradient}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource WindowSoftHighlightBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource SoftNoiseBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource WindowVignetteBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <LinearGradientBrush x:Key="PanelBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#8A0F1218" />
            <GradientStop Offset="1" Color="#6A0B0D12" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PanelInnerSheenBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#0FFFFFFF" />
            <GradientStop Offset="0.35" Color="#06000000" />
            <GradientStop Offset="1" Color="#00000000" />
        </LinearGradientBrush>

        <Style x:Key="PaneFrameStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource PanelStrokeBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Style
            x:Key="IconOnlyButton"
            BasedOn="{StaticResource NormalGuiButton}"
            TargetType="Button">
            <Setter Property="Width" Value="56" />
            <Setter Property="Height" Value="{StaticResource FormControlHeight}" />
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="FormTextBox_Local"
            BasedOn="{StaticResource FormTextBox}"
            TargetType="TextBox">
            <Setter Property="Height" Value="{StaticResource FormControlHeight}" />
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Storyboard x:Key="StartStopButtonHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonHoverColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonDefaultColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonHoverMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonHoverMonitoringColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonDefaultMonitoringColor}"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Grid SnapsToDevicePixels="True">
        <Rectangle
            Margin="6"
            Fill="#00000000"
            IsHitTestVisible="False"
            RadiusX="12"
            RadiusY="12">
            <Rectangle.Effect>
                <DropShadowEffect
                    BlurRadius="28"
                    ShadowDepth="0"
                    Color="#AA000000" />
            </Rectangle.Effect>
        </Rectangle>

        <Border
            Margin="6"
            Padding="0"
            Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="{StaticResource WindowStrokeBrush}"
            BorderThickness="1"
            ClipToBounds="True"
            CornerRadius="12"
            SnapsToDevicePixels="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    x:Name="titleBar"
                    Grid.Row="0"
                    ClipToBounds="True"
                    CornerRadius="12,12,0,0"
                    MouseDown="titleBar_MouseDown">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#CC0A0C10" />
                            <GradientStop Offset="1" Color="#7A0A0C10" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Border
                    Grid.Row="0"
                    ClipToBounds="True"
                    CornerRadius="12,12,0,0">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="#18FFFFFF" />
                    </Border.BorderBrush>
                    <Border.BorderThickness>0,0,0,1</Border.BorderThickness>
                </Border>

                <TextBlock
                    Grid.Row="0"
                    Margin="12,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource AppFontFamily}"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TextPrimaryBrush}"
                    Text="GameTimeX" />

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Width="40"
                        Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="btnMinimize_Click"
                        Content="🗕"
                        Foreground="White"
                        MouseEnter="btnMinimize_MouseEnter"
                        MouseLeave="btnMinimize_MouseLeave"
                        Style="{StaticResource NoMouseOverButtonStyle}" />
                    <Button
                        x:Name="btnClose"
                        Width="40"
                        Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="btnClose_Click"
                        Content="X"
                        Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    ClipToBounds="True"
                                    CornerRadius="0,12,0,0"
                                    SnapsToDevicePixels="True">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#CCFF3B30" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#AAFF3B30" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <Grid x:Name="grdContent" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70*" />
                        <ColumnDefinition Width="30*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Margin="10,10,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="txtSearchBar"
                            Grid.Column="0"
                            Width="420"
                            MaxWidth="520"
                            Style="{StaticResource SearchTextBox}"
                            Tag="Search for games here"
                            TextChanged="txtSearchBar_TextChanged" />

                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ToggleButton
                                x:Name="btnPlayableFilter"
                                Grid.Column="0"
                                Width="36"
                                Height="{StaticResource FormControlHeight}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnPlayableFilter_Click"
                                Style="{StaticResource MenuBarToggleButton}"
                                ToolTip="Show only playable game profiles">
                                <Image Source="{StaticResource playable}" />
                            </ToggleButton>

                            <Button
                                x:Name="btnMode"
                                Grid.Column="1"
                                Width="36"
                                Height="{StaticResource FormControlHeight}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnMode_Click"
                                Foreground="White"
                                Style="{StaticResource MenuBarButton}"
                                Visibility="Hidden">
                                <Image x:Name="imgMode" Source="{StaticResource ModeTiles}" />
                            </Button>

                            <Button
                                x:Name="btnNew"
                                Grid.Column="2"
                                Width="36"
                                Height="{StaticResource FormControlHeight}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnNew_Click"
                                Foreground="White"
                                Style="{StaticResource MenuBarButton}">
                                <Image Source="{StaticResource CreateNewImageSource}" />
                            </Button>

                            <Button
                                x:Name="btnDelete"
                                Grid.Column="3"
                                Width="36"
                                Height="{StaticResource FormControlHeight}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnDelete_Click"
                                Foreground="White"
                                Style="{StaticResource MenuBarButton}">
                                <Image Source="{StaticResource DeleteImageSource}" />
                            </Button>

                            <Button
                                x:Name="btnProperties"
                                Grid.Column="4"
                                Width="36"
                                Height="{StaticResource FormControlHeight}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnProperties_Click"
                                Foreground="White"
                                Style="{StaticResource MenuBarButton}">
                                <Image Source="{StaticResource PropertiesSource}" />
                            </Button>

                            <Button
                                x:Name="btnSettings"
                                Grid.Column="5"
                                Width="36"
                                Height="{StaticResource FormControlHeight}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnSettings_Click"
                                Foreground="White"
                                Style="{StaticResource MenuBarButton}">
                                <Image Source="{StaticResource SettingsImageSource}" />
                            </Button>
                        </Grid>
                    </Grid>

                    <ScrollViewer
                        x:Name="scrollBar"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        HorizontalScrollBarVisibility="Hidden"
                        PreviewMouseWheel="scrollBar_PreviewMouseWheel"
                        VerticalScrollBarVisibility="Auto">
                        <DataGrid
                            x:Name="dgProfiles"
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="{Binding ElementName=scrollBar, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            GridLinesVisibility="Horizontal"
                            IsReadOnly="True"
                            ItemsSource="{Binding Profile}"
                            RowHeaderWidth="0"
                            SelectionChanged="dgProfiles_SelectionChanged"
                            SelectionMode="Single"
                            SelectionUnit="FullRow">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Offset="0" Color="#FF289AFC" />
                                                <GradientStop Offset="1" Color="#FF1C7FE0" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="Height" Value="34" />
                                    <Setter Property="Padding" Value="12,0,0,0" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    <Setter Property="BorderBrush" Value="#22FFFFFF" />
                                </Style>

                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="Height" Value="50" />
                                    <Setter Property="Background" Value="#52000000" />
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding State}" Value="State1">
                                            <Setter Property="Background" Value="#52000000" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}" Value="State2">
                                            <Setter Property="Background" Value="#3A289AFC" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>

                                <Style TargetType="{x:Type DataGrid}">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="HorizontalGridLinesBrush" Value="#14FFFFFF" />
                                    <Setter Property="Background" Value="#3A000000" />
                                </Style>

                                <Style x:Key="DisableSelection" TargetType="DataGridCell">
                                    <Setter Property="Focusable" Value="False" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Style>

                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#3A289AFC" />
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="0"
                                    Binding="{Binding PID}"
                                    Header="PID"
                                    Visibility="Hidden" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding ProfileName}"
                                    Header="Name" />
                            </DataGrid.Columns>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </ScrollViewer>

                    <Border
                        x:Name="tilesAreaFrame"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        Style="{StaticResource PaneFrameStyle}">
                        <Grid ClipToBounds="True">
                            <Rectangle Fill="{StaticResource PanelBackgroundBrush}" />
                            <Rectangle Fill="{StaticResource PanelInnerSheenBrush}" />
                            <ScrollViewer
                                x:Name="scrollBarTiles"
                                Margin="0"
                                HorizontalAlignment="Stretch"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Auto">
                                <Grid x:Name="grdGameProfiles" Margin="12" />
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!--  Lade-Overlay  -->
                    <Grid
                        x:Name="loadingOverlay"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        Panel.ZIndex="30"
                        Opacity="0"
                        Visibility="Collapsed">
                        <Border Style="{StaticResource PaneFrameStyle}">
                            <Grid ClipToBounds="True">
                                <Rectangle Fill="{StaticResource PanelBackgroundBrush}" />
                                <Rectangle Fill="{StaticResource PanelInnerSheenBrush}" />
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <Grid
                                        Width="42"
                                        Height="42"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Ellipse
                                            Width="42"
                                            Height="42"
                                            Stroke="#33FFFFFF"
                                            StrokeThickness="4" />
                                        <Path
                                            Data="M21,2 A19,19 0 0 1 40,21"
                                            Stroke="#289afc"
                                            StrokeThickness="4">
                                            <Path.RenderTransform>
                                                <RotateTransform x:Name="rtSpinner" CenterX="21" CenterY="21" />
                                            </Path.RenderTransform>
                                        </Path>
                                        <Grid.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetName="rtSpinner"
                                                            Storyboard.TargetProperty="Angle"
                                                            From="0"
                                                            To="360"
                                                            Duration="0:0:0.9" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Grid.Triggers>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!--  Empty State  -->
                    <Grid
                        x:Name="emptyStateOverlay"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        Panel.ZIndex="10"
                        Visibility="Collapsed">
                        <Border Style="{StaticResource PaneFrameStyle}">
                            <Grid ClipToBounds="True">
                                <Rectangle Fill="{StaticResource PanelBackgroundBrush}" />
                                <Rectangle Fill="{StaticResource PanelInnerSheenBrush}" />
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <Image
                                        Width="140"
                                        Height="140"
                                        Margin="0,0,0,12"
                                        Opacity="0.9"
                                        Source="{DynamicResource EmptyStateImage}"
                                        Stretch="Uniform" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        Text="No games to show" />
                                    <TextBlock
                                        Margin="0,6,0,0"
                                        HorizontalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource TextSecondaryBrush}"
                                        Text="Add a game or adjust your filters." />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!--
                        =========================
                        RECHTER DETAILBEREICH
                        =========================
                    -->
                    <Grid
                        x:Name="grdGameInfo"
                        Grid.Row="1"
                        Grid.Column="1">
                        <Grid.Resources>
                            <LinearGradientBrush x:Key="DetailPanelBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#7A0F1218" />
                                <GradientStop Offset="1" Color="#5A0B0D12" />
                            </LinearGradientBrush>

                            <LinearGradientBrush x:Key="DetailPanelSheenBrush" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0" Color="#10FFFFFF" />
                                <GradientStop Offset="0.35" Color="#06000000" />
                                <GradientStop Offset="1" Color="#00000000" />
                            </LinearGradientBrush>

                            <SolidColorBrush x:Key="DetailPanelStroke" Color="#22FFFFFF" />
                            <SolidColorBrush x:Key="StrokeBrush" Color="#1AFFFFFF" />
                            <SolidColorBrush
                                x:Key="AccentPillBrush"
                                Opacity="0.16"
                                Color="{StaticResource AccentBlue}" />

                            <Style x:Key="PillBox" TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource AccentPillBrush}" />
                                <Setter Property="CornerRadius" Value="10" />
                                <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="Padding" Value="10,5" />
                                <Setter Property="MinHeight" Value="30" />
                                <Setter Property="SnapsToDevicePixels" Value="True" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>

                            <Style
                                x:Key="PillIconButton"
                                BasedOn="{StaticResource NoMouseOverButtonStyle}"
                                TargetType="Button">
                                <Setter Property="Width" Value="16" />
                                <Setter Property="Height" Value="16" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="8,0,0,0" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </Grid.Resources>

                        <Border
                            Margin="10"
                            BorderBrush="{StaticResource DetailPanelStroke}"
                            BorderThickness="1"
                            ClipToBounds="True"
                            CornerRadius="12"
                            SnapsToDevicePixels="True">
                            <Grid ClipToBounds="True">
                                <Rectangle Fill="{StaticResource DetailPanelBackgroundBrush}" />
                                <Rectangle Fill="{StaticResource DetailPanelSheenBrush}" />
                                <Rectangle Fill="{StaticResource SoftNoiseBrush}" Opacity="0.03" />
                            </Grid>
                        </Border>

                        <Border
                            Margin="0,10,0,10"
                            BorderBrush="#14FFFFFF"
                            BorderThickness="1,0,0,0" />

                        <Grid Margin="22">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,18">
                                <Grid MaxWidth="{Binding ElementName=grdGameInfo, Path=ActualWidth}" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        x:Name="lblGameName"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="22"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        Text="N/A"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">
                                        <TextBlock.ToolTip>
                                            <ToolTip
                                                Background="#333333"
                                                BorderThickness="1"
                                                Foreground="White">
                                                <TextBlock Name="lblToolTipGameName" Text="N/A" />
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>

                                    <Button
                                        x:Name="btnEditProfileName"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Click="btnEditProfileName_Click"
                                        Style="{StaticResource EditCircleIconButton}" />
                                </Grid>
                            </Grid>

                            <Border
                                Grid.Row="1"
                                Width="240"
                                Height="240"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                Background="#3A000000"
                                BorderBrush="#22FFFFFF"
                                BorderThickness="1"
                                ClipToBounds="True"
                                CornerRadius="16"
                                SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="16"
                                        Direction="315"
                                        ShadowDepth="4"
                                        Color="#66000000" />
                                </Border.Effect>
                                <Border
                                    ClipToBounds="True"
                                    CornerRadius="14"
                                    SnapsToDevicePixels="True">
                                    <Image
                                        x:Name="currProfileImage"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Source="{StaticResource MyImageSource}"
                                        Stretch="UniformToFill" />
                                </Border>
                            </Border>

                            <TextBlock
                                x:Name="lblChangeProfileImage"
                                Grid.Row="2"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                PreviewMouseDown="lblChangeProfileImage_PreviewMouseDown"
                                Style="{StaticResource ChangeImageStyle}"
                                Text="Change Image"
                                TextDecorations="Underline" />

                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1" HorizontalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="10" />
                                            <RowDefinition x:Name="rowPlaythrough" Height="30" />
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            Text="Game time:" />
                                        <Border
                                            x:Name="borderGameTimePill"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Style="{StaticResource PillBox}">
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <TextBlock
                                                    x:Name="lblGameTime"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Foreground="{StaticResource TextPrimaryBrush}"
                                                    Text="N/A" />
                                                <Button x:Name="btnGameTimeInfo" Style="{StaticResource PillIconButton}">
                                                    <Button.ToolTip>
                                                        <ToolTip
                                                            Background="#333333"
                                                            BorderThickness="1"
                                                            Foreground="White">
                                                            <TextBlock Name="lblToolTipGameTimeText">0 Minutes</TextBlock>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                    <Image
                                                        Width="14"
                                                        Height="14"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Source="{StaticResource GameInfoSource}" />
                                                </Button>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            Text="Playthrough:" />
                                        <Border
                                            x:Name="borderPlaythroughPill"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Width="{Binding ElementName=borderGameTimePill, Path=ActualWidth}"
                                            Style="{StaticResource PillBox}">
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <TextBlock
                                                    x:Name="lblGameTimeNewPlaythrough"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Foreground="{StaticResource TextPrimaryBrush}"
                                                    Text="N/A" />
                                                <Button x:Name="btnGameTimeNewPlaythrough" Style="{StaticResource PillIconButton}">
                                                    <Button.ToolTip>
                                                        <ToolTip
                                                            Background="#333333"
                                                            BorderThickness="1"
                                                            Foreground="White">
                                                            <TextBlock Name="lblToolTipGameTimeTextNewPlaythrough">0 Minutes</TextBlock>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                    <Image
                                                        Width="14"
                                                        Height="14"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Source="{StaticResource GameInfoSource}" />
                                                </Button>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            Text="First time played:" />
                                        <TextBlock
                                            x:Name="lblFirstTimePlayed"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{StaticResource TextPrimaryBrush}"
                                            Text="N/A" />

                                        <TextBlock
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{StaticResource TextSecondaryBrush}"
                                            Text="Last time played:" />
                                        <TextBlock
                                            x:Name="lblLastTimePlayed"
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{StaticResource TextPrimaryBrush}"
                                            Text="N/A" />
                                    </Grid>
                                </Grid>

                                <StackPanel
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Center"
                                    Orientation="Vertical">
                                    <Button
                                        x:Name="btnLaunchSteamGame"
                                        Margin="0,0,0,10"
                                        Click="btnLaunchSteamGame_Click"
                                        Style="{StaticResource SteamPlayButton}">
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="18"
                                                Height="18"
                                                Margin="0,0,6,0"
                                                VerticalAlignment="Center"
                                                Source="{StaticResource steamImage}" />
                                            <TextBlock
                                                x:Name="txtLaunchSteamGameButtonText"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                Text="Launch game" />
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        x:Name="btnStartStopMonitoring"
                                        Width="220"
                                        Height="50"
                                        BorderBrush="Black"
                                        Click="btnStartStopMonitoring_Click"
                                        Content="Start Monitoring"
                                        Cursor="Hand"
                                        FontSize="20"
                                        Foreground="White"
                                        MouseEnter="btnStartStopMonitoring_MouseEnter"
                                        MouseLeave="btnStartStopMonitoring_MouseLeave"
                                        Style="{StaticResource StartStopMonitoringButton}" />
                                    <TextBlock
                                        x:Name="txtGameSession"
                                        Margin="0,12,0,0"
                                        HorizontalAlignment="Center"
                                        Foreground="{StaticResource TextSecondaryBrush}"
                                        Visibility="Hidden">
                                        Session: 0 minutes
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <Rectangle
                                Grid.Row="4"
                                Height="1"
                                Fill="#00000000" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
