<Window
    x:Class="GameTimeX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameTimeX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GameTimeX"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="Window_Closed"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    Style="{StaticResource DefaultWindowStyle}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="IconOnlyButton"
            BasedOn="{StaticResource NormalGuiButton}"
            TargetType="Button">
            <Setter Property="Width" Value="56" />
            <Setter Property="Height" Value="{StaticResource FormControlHeight}" />
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="FormTextBox_Local"
            BasedOn="{StaticResource FormTextBox}"
            TargetType="TextBox">
            <Setter Property="Height" Value="{StaticResource FormControlHeight}" />
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="PaneFrameStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="#0F000000" />
            <Setter Property="BorderBrush" Value="#20FFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Storyboard x:Key="StartStopButtonHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonHoverColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverNotMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonDefaultColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonHoverMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonHoverMonitoringColor}"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="StartStopButtonNoHoverMonitoring" Duration="00:00:4">
            <ColorAnimation
                Storyboard.TargetName="btnStartStopMonitoring"
                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                To="{StaticResource ButtonDefaultMonitoringColor}"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Border
        Padding="0"
        Background="#2F2F2F"
        BorderBrush="{DynamicResource ButtonDefaultBrush}"
        BorderThickness="1"
        CornerRadius="12"
        SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                x:Name="titleBar"
                Grid.Row="0"
                Background="Black"
                ClipToBounds="True"
                CornerRadius="12,12,0,0"
                MouseDown="titleBar_MouseDown" />
            <TextBlock
                Grid.Row="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Forte"
                FontSize="15"
                Foreground="White"
                Text="GameTimeX" />

            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnMinimize"
                    Width="40"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btnMinimize_Click"
                    Content="🗕"
                    Foreground="White"
                    MouseEnter="btnMinimize_MouseEnter"
                    MouseLeave="btnMinimize_MouseLeave"
                    Style="{StaticResource NoMouseOverButtonStyle}" />
                <Button
                    x:Name="btnClose"
                    Width="40"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btnClose_Click"
                    Content="X"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,12,0,0"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Grid x:Name="grdContent" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtSearchBar"
                        Grid.Column="0"
                        Width="420"
                        MaxWidth="520"
                        Style="{StaticResource SearchTextBox}"
                        Tag="Search for games here"
                        TextChanged="txtSearchBar_TextChanged" />

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ToggleButton
                            x:Name="btnPlayableFilter"
                            Grid.Column="0"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnPlayableFilter_Click"
                            Style="{StaticResource MenuBarToggleButton}"
                            ToolTip="Show only playable game profiles">
                            <Image Source="{StaticResource playable}" />
                        </ToggleButton>

                        <Button
                            x:Name="btnMode"
                            Grid.Column="1"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnMode_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}"
                            Visibility="Hidden">
                            <Image x:Name="imgMode" Source="{StaticResource ModeTiles}" />
                        </Button>

                        <Button
                            x:Name="btnNew"
                            Grid.Column="2"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnNew_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource CreateNewImageSource}" />
                        </Button>

                        <Button
                            x:Name="btnDelete"
                            Grid.Column="3"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnDelete_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource DeleteImageSource}" />
                        </Button>

                        <Button
                            x:Name="btnProperties"
                            Grid.Column="4"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnProperties_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource PropertiesSource}" />
                        </Button>

                        <Button
                            x:Name="btnSettings"
                            Grid.Column="5"
                            Width="36"
                            Height="{StaticResource FormControlHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="btnSettings_Click"
                            Foreground="White"
                            Style="{StaticResource MenuBarButton}">
                            <Image Source="{StaticResource SettingsImageSource}" />
                        </Button>
                    </Grid>
                </Grid>

                <ScrollViewer
                    x:Name="scrollBar"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    HorizontalScrollBarVisibility="Hidden"
                    PreviewMouseWheel="scrollBar_PreviewMouseWheel"
                    VerticalScrollBarVisibility="Auto">
                    <DataGrid
                        x:Name="dgProfiles"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="{Binding ElementName=scrollBar, Path=ActualWidth}"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        GridLinesVisibility="Horizontal"
                        IsReadOnly="True"
                        ItemsSource="{Binding Profile}"
                        RowHeaderWidth="0"
                        SelectionChanged="dgProfiles_SelectionChanged"
                        SelectionMode="Single"
                        SelectionUnit="FullRow">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#289afc" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                                <Setter Property="BorderThickness" Value="0,0,0,2" />
                            </Style>

                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Height" Value="50" />
                                <Setter Property="Background" Value="#333333" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="30" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding State}" Value="State1">
                                        <Setter Property="Background" Value="#333333" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding State}" Value="State2">
                                        <Setter Property="Background" Value="#008ae6" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="{x:Type DataGrid}">
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="HorizontalGridLinesBrush" Value="#292928" />
                                <Setter Property="Background" Value="#333333" />
                            </Style>

                            <Style x:Key="DisableSelection" TargetType="DataGridCell">
                                <Setter Property="Focusable" Value="False" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Style>

                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#008ae6" />
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="0"
                                Binding="{Binding PID}"
                                Header="PID"
                                Visibility="Hidden" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding ProfileName}"
                                Header="Name" />
                        </DataGrid.Columns>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </ScrollViewer>

                <Border
                    x:Name="tilesAreaFrame"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Style="{StaticResource PaneFrameStyle}">
                    <ScrollViewer
                        x:Name="scrollBarTiles"
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="grdGameProfiles" Margin="12" />
                    </ScrollViewer>
                </Border>

                <!--  Lade-Overlay  -->
                <Grid
                    x:Name="loadingOverlay"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Panel.ZIndex="30"
                    Opacity="0"
                    Visibility="Collapsed">
                    <Border Style="{StaticResource PaneFrameStyle}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <Grid
                                Width="42"
                                Height="42"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Ellipse
                                    Width="42"
                                    Height="42"
                                    Stroke="#33FFFFFF"
                                    StrokeThickness="4" />
                                <Path
                                    Data="M21,2 A19,19 0 0 1 40,21"
                                    Stroke="#289afc"
                                    StrokeThickness="4">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="rtSpinner" CenterX="21" CenterY="21" />
                                    </Path.RenderTransform>
                                </Path>
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation
                                                    RepeatBehavior="Forever"
                                                    Storyboard.TargetName="rtSpinner"
                                                    Storyboard.TargetProperty="Angle"
                                                    From="0"
                                                    To="360"
                                                    Duration="0:0:0.9" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Empty State  -->
                <Grid
                    x:Name="emptyStateOverlay"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Panel.ZIndex="10"
                    Visibility="Collapsed">
                    <Border Style="{StaticResource PaneFrameStyle}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <Image
                                Width="140"
                                Height="140"
                                Margin="0,0,0,12"
                                Opacity="0.9"
                                Source="{DynamicResource EmptyStateImage}"
                                Stretch="Uniform" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="No games to show" />
                            <TextBlock
                                Margin="0,6,0,0"
                                HorizontalAlignment="Center"
                                FontSize="13"
                                Foreground="#CCFFFFFF"
                                Text="Add a game or adjust your filters." />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--
                    =========================
                    RECHTER DETAILBEREICH (modern/minimal)
                    =========================
                -->
                <Grid
                    x:Name="grdGameInfo"
                    Grid.Row="1"
                    Grid.Column="1">
                    <Grid.Resources>
                        <SolidColorBrush x:Key="DetailPanelBackground" Color="#1C1C1C" />
                        <SolidColorBrush x:Key="DetailPanelStroke" Color="#28FFFFFF" />
                        <SolidColorBrush x:Key="StrokeBrush" Color="#26FFFFFF" />
                        <SolidColorBrush
                            x:Key="AccentPillBrush"
                            Opacity="0.15"
                            Color="{StaticResource ButtonDefaultColor}" />

                        <Style x:Key="PillBox" TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource AccentPillBrush}" />
                            <Setter Property="CornerRadius" Value="8" />
                            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Padding" Value="10,4" />
                            <Setter Property="MinHeight" Value="28" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>

                        <Style
                            x:Key="PillIconButton"
                            BasedOn="{StaticResource NoMouseOverButtonStyle}"
                            TargetType="Button">
                            <Setter Property="Width" Value="16" />
                            <Setter Property="Height" Value="16" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="8,0,0,0" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>

                    <!--  Hintergrundkarte  -->
                    <Border
                        Margin="10"
                        Background="{StaticResource DetailPanelBackground}"
                        BorderBrush="{StaticResource DetailPanelStroke}"
                        BorderThickness="1"
                        CornerRadius="12"
                        SnapsToDevicePixels="True" />

                    <!--  Trennlinie zum linken Bereich  -->
                    <Border
                        Margin="0,10,0,10"
                        BorderBrush="#20FFFFFF"
                        BorderThickness="1,0,0,0" />

                    <!--  Inhalt  -->
                    <Grid Margin="22">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Titel  -->
                        <Grid Grid.Row="0" Margin="0,0,0,18">
                            <Grid MaxWidth="{Binding ElementName=grdGameInfo, Path=ActualWidth}" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="lblGameName"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="N/A"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">
                                    <TextBlock.ToolTip>
                                        <ToolTip
                                            Background="#333333"
                                            BorderThickness="1"
                                            Foreground="White">
                                            <TextBlock Name="lblToolTipGameName" Text="N/A" />
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>

                                <Button
                                    x:Name="btnEditProfileName"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Click="btnEditProfileName_Click"
                                    Style="{StaticResource EditCircleIconButton}" />
                            </Grid>
                        </Grid>

                        <!--  Quadratisches Cover mit sauberen runden Ecken  -->
                        <Border
                            Grid.Row="1"
                            Width="240"
                            Height="240"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            Background="#242424"
                            BorderBrush="#25FFFFFF"
                            BorderThickness="1"
                            CornerRadius="16"
                            SnapsToDevicePixels="True">
                            <!--  weicher Shadow am äußeren Container  -->
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="14"
                                    Direction="315"
                                    ShadowDepth="4"
                                    Color="#55000000" />
                            </Border.Effect>
                            <!--  Innenborder clippt das Bild exakt auf Rundung  -->
                            <Border
                                ClipToBounds="True"
                                CornerRadius="14"
                                SnapsToDevicePixels="True">
                                <Image
                                    x:Name="currProfileImage"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{StaticResource MyImageSource}"
                                    Stretch="UniformToFill" />
                            </Border>
                        </Border>

                        <TextBlock
                            x:Name="lblChangeProfileImage"
                            Grid.Row="2"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            PreviewMouseDown="lblChangeProfileImage_PreviewMouseDown"
                            Style="{StaticResource ChangeImageStyle}"
                            Text="Change Image"
                            TextDecorations="Underline" />

                        <!--  Info + Buttons  -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  INFO (zentriert zwischen Link und Buttons)  -->
                            <Grid Grid.Row="0" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="1" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="10" />
                                        <RowDefinition x:Name="rowPlaythrough" Height="30" />
                                        <RowDefinition Height="10" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Game time  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Foreground="#DDFFFFFF"
                                        Text="Game time:" />
                                    <Border
                                        x:Name="borderGameTimePill"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource PillBox}">
                                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock
                                                x:Name="lblGameTime"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="N/A" />
                                            <Button x:Name="btnGameTimeInfo" Style="{StaticResource PillIconButton}">
                                                <Button.ToolTip>
                                                    <ToolTip
                                                        Background="#333333"
                                                        BorderThickness="1"
                                                        Foreground="White">
                                                        <TextBlock Name="lblToolTipGameTimeText">0 Minutes</TextBlock>
                                                    </ToolTip>
                                                </Button.ToolTip>
                                                <Image
                                                    Width="14"
                                                    Height="14"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Source="{StaticResource GameInfoSource}" />
                                            </Button>
                                        </StackPanel>
                                    </Border>

                                    <!--  Playthrough (gleich breit)  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Foreground="#DDFFFFFF"
                                        Text="Playthrough:" />
                                    <Border
                                        x:Name="borderPlaythroughPill"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="{Binding ElementName=borderGameTimePill, Path=ActualWidth}"
                                        Style="{StaticResource PillBox}">
                                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock
                                                x:Name="lblGameTimeNewPlaythrough"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="N/A" />
                                            <Button x:Name="btnGameTimeNewPlaythrough" Style="{StaticResource PillIconButton}">
                                                <Button.ToolTip>
                                                    <ToolTip
                                                        Background="#333333"
                                                        BorderThickness="1"
                                                        Foreground="White">
                                                        <TextBlock Name="lblToolTipGameTimeTextNewPlaythrough">0 Minutes</TextBlock>
                                                    </ToolTip>
                                                </Button.ToolTip>
                                                <Image
                                                    Width="14"
                                                    Height="14"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Source="{StaticResource GameInfoSource}" />
                                            </Button>
                                        </StackPanel>
                                    </Border>

                                    <!--  First / Last (tick größer)  -->
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="#DDFFFFFF"
                                        Text="First time played:" />
                                    <TextBlock
                                        x:Name="lblFirstTimePlayed"
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="N/A" />

                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="#DDFFFFFF"
                                        Text="Last time played:" />
                                    <TextBlock
                                        x:Name="lblLastTimePlayed"
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="N/A" />
                                </Grid>
                            </Grid>

                            <!--  BUTTONS (unten fix)  -->
                            <StackPanel
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="0,16,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">
                                <Button
                                    x:Name="btnLaunchSteamGame"
                                    Margin="0,0,0,10"
                                    Click="btnLaunchSteamGame_Click"
                                    Style="{StaticResource SteamPlayButton}">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Image
                                            Width="18"
                                            Height="18"
                                            Margin="0,0,6,0"
                                            VerticalAlignment="Center"
                                            Source="{StaticResource steamImage}" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="Launch game" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    x:Name="btnStartStopMonitoring"
                                    Width="220"
                                    Height="50"
                                    BorderBrush="Black"
                                    Click="btnStartStopMonitoring_Click"
                                    Content="Start Monitoring"
                                    Cursor="Hand"
                                    FontSize="20"
                                    Foreground="White"
                                    MouseEnter="btnStartStopMonitoring_MouseEnter"
                                    MouseLeave="btnStartStopMonitoring_MouseLeave"
                                    Style="{StaticResource StartStopMonitoringButton}" />
                                <TextBlock
                                    x:Name="txtGameSession"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Visibility="Hidden">
                                    Session: 0 minutes
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Rectangle
                            Grid.Row="4"
                            Height="1"
                            Fill="#00000000" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
