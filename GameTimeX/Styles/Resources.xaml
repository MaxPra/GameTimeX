<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
   
    
    <!-- Images -->
    <BitmapImage x:Key="MyImageSource" UriSource="pack://application:,,,/../images/no_picture.png" />
    <BitmapImage x:Key="CreateNewImageSource" UriSource="pack://application:,,,/../images/create_new.png" />
    <BitmapImage x:Key="DeleteImageSource" UriSource="pack://application:,,,/../images/delete.png" />
    <BitmapImage x:Key="EditImageSource" UriSource="pack://application:,,,/../images/edit.png" />
    <BitmapImage x:Key="SettingsImageSource" UriSource="pack://application:,,,/../images/settings.png" />
    <BitmapImage x:Key="GameInfoSource" UriSource="pack://application:,,,/../images/game_time1.png" CacheOption="OnLoad"/>
    <BitmapImage x:Key="ModeTiles" UriSource="pack://application:,,,/../images/tiles.png" />
    <BitmapImage x:Key="ModeList" UriSource="pack://application:,,,/../images/list.png" />
    <BitmapImage x:Key="BannerSource" UriSource="pack://application:,,,/../images/GameTimeX_Banner.png" />
    <BitmapImage x:Key="PropertiesSource" UriSource="pack://application:,,,/../images/properties.png" />
    <BitmapImage x:Key="picture" UriSource="pack://application:,,,/../images/picture.png" />
    <BitmapImage x:Key="folder" UriSource="pack://application:,,,/../images/folder.png" />
    
    
    <!-- Colors -->
    <Color x:Key="ButtonDefaultColor">#0099ff</Color>
    <Color x:Key="ButtonHoverColor">#008ae6</Color>
    <Color x:Key="ButtonDefaultMonitoringColor">#b30000</Color>
    <Color x:Key="ButtonHoverMonitoringColor">#990000</Color>
    <Color x:Key="ButtonCancelHoverColor">#990000</Color>
    <Color x:Key="ButtonCancelDefaultColor">#b30000</Color>

    <!-- Pressed-Farben -->
    <Color x:Key="ButtonPressedColor">#0076CC</Color>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{StaticResource ButtonPressedColor}"/>

    <!--für rote Cancel-Buttons -->
    <Color x:Key="ButtonCancelPressedColor">#7A0000</Color>
    <SolidColorBrush x:Key="ButtonCancelPressedBrush" Color="{StaticResource ButtonCancelPressedColor}"/>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ButtonDefaultBrush" Color="{StaticResource ButtonDefaultColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
    <SolidColorBrush x:Key="ButtonCancelHoverBrush" Color="{StaticResource ButtonCancelHoverColor}"/>
    <SolidColorBrush x:Key="ButtonCancelBrush" Color="{StaticResource ButtonCancelDefaultColor}"/>
    
    <!-- Schriftarten -->
    <FontFamily x:Key="RobotoRegular">pack://application:,,,/Fonts/Roboto-Regular.ttf</FontFamily>
    <FontFamily x:Key="RobotoBold">pack://application:,,,/Fonts/Roboto-Bold.ttf</FontFamily>

    <sys:Double x:Key="FormControlHeight">32</sys:Double>
    <Thickness x:Key="FormRowSpacing">0,3,0,3</Thickness>


</ResourceDictionary>