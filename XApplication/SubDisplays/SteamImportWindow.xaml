<Window x:Class="GameTimeX.XApplication.SubDisplays.SteamImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Import from Steam"
        Width="720" Height="560"
        MinWidth="600" MinHeight="460"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        Style="{StaticResource DefaultWindowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            Background="#2F2F2F"
            CornerRadius="12"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0" Background="Black" CornerRadius="12,12,0,0" ClipToBounds="True"/>
            <TextBlock Grid.Row="0" Text="Import from Steam" Margin="10,0,0,0"
                       VerticalAlignment="Center" Foreground="White"/>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" Content="X" Width="40" Height="30"
                        Foreground="White" Background="Transparent" BorderBrush="Transparent"
                        Click="btnClose_Click" Style="{StaticResource NoMouseOverButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Header / Controls -->
            <Grid Grid.Row="1" Margin="18,16,18,6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Foreground="#BBBBBB"
                           TextWrapping="Wrap"
                           Text="Select a Steam game to import name, AppID and installation folder into a new profile." />

                <!-- Suchleiste + Filter -->
                <DockPanel Grid.Row="2" Grid.Column="0">
                    <TextBox x:Name="txtSearch"
                             MinWidth="250"
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"
                             Style="{StaticResource SearchTextBox}"
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyDown="txtSearch_KeyDown"/>
                    <CheckBox x:Name="cbInstalledOnly"
                              Content="Installed only"
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              Style="{StaticResource CheckBoxDefaultStyle}"
                              IsChecked="{Binding InstalledOnly, Mode=TwoWay}"/>
                    <Button x:Name="btnRefresh"
                            Content="Refresh"
                            Width="110" Height="32"
                            VerticalAlignment="Center"
                            Click="btnRefresh_Click"
                            Style="{StaticResource NormalGuiButton}"/>
                </DockPanel>

                <!-- Count / Busy rechts -->
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Foreground="#DDDDDD"
                               Margin="0,0,8,0"
                               Text="{Binding ElementName=dgGames, Path=Items.Count, StringFormat=Items: {0}}"/>
                    <ProgressBar Width="120" Height="8" IsIndeterminate="True">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </StackPanel>
            </Grid>

            <!-- Liste -->
            <Border Grid.Row="2" Margin="18" Background="#3A3A3A" CornerRadius="10" BorderBrush="#20FFFFFF" BorderThickness="1">
                <DataGrid x:Name="dgGames"
                          Style="{StaticResource SteamDataGrid}"
                          ItemsSource="{Binding Games}"
                          SelectedItem="{Binding SelectedGame, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          RowDetailsVisibilityMode="Collapsed" SelectionChanged="dgGames_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="AppID" Binding="{Binding AppId}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Install Folder" Binding="{Binding InstallDir}" Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>

            <!-- Footer -->
            <Grid Grid.Row="3" Margin="18,0,18,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        x:Name="btnCancel"
                        Content="Cancel"
                        Width="140" Height="40"
                        Click="btnClose_Click"
                        Style="{StaticResource NormalGuiButton}"/>

                <Button Grid.Column="3"
                        x:Name="btnImport"
                        Content="Import"
                        Width="180" Height="40"
                        Click="btnImport_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NormalGuiButton}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedGame}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
