<Window x:Class="GameTimeX.CreateNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Create New Profile"
        Width="560" Height="250"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        Style="{StaticResource DefaultWindowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <!-- Lokale Maße/Styles -->
    <Window.Resources>
        <!-- einheitliche Höhe und kompakter Reihenabstand -->
        <sys:Double x:Key="FormControlHeight">32</sys:Double>
        <Thickness x:Key="FormRowSpacing">0,3,0,3</Thickness>

        <!-- Icon-Only-Button auf TextBox-Höhe -->
        <Style x:Key="IconOnlyButton" TargetType="Button" BasedOn="{StaticResource NormalGuiButton}">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="{StaticResource FormControlHeight}"/>
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- TextBox an gleiche Höhe/Abstand binden -->
        <Style x:Key="FormTextBox_Local" TargetType="TextBox" BasedOn="{StaticResource FormTextBox}">
            <Setter Property="Height" Value="{StaticResource FormControlHeight}"/>
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Außenrahmen -->
    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            Background="#2F2F2F"
            CornerRadius="12"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0" Background="Black" CornerRadius="12,12,0,0" ClipToBounds="True"/>
            <TextBlock Grid.Row="0" Text="Create new profile" Margin="10,0,0,0"
                       VerticalAlignment="Center" Foreground="White"/>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" Content="X" Width="40" Height="28"
                        Foreground="White" Background="Transparent" BorderBrush="Transparent"
                        Click="btnClose_Click" Style="{StaticResource NoMouseOverButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Inhalt -->
            <Grid Grid.Row="1" Margin="18">
                <!-- Spalten: Felder | Spacer | Icon-Spalte -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Kompakte Reihen: nur Auto + Füller + Save -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Pic path -->
                    <RowDefinition Height="Auto"/>
                    <!-- Game folder -->
                    <RowDefinition Height="*"/>
                    <!-- Füller -->
                    <RowDefinition Height="Auto"/>
                    <!-- Save -->
                </Grid.RowDefinitions>

                <!-- Profile name -->
                <TextBox Grid.Row="0" Grid.Column="0"
                         x:Name="txtProfileName"
                         Style="{StaticResource FormTextBox_Local}"
                         Tag="Profile name"/>

                <!-- Picture path -->
                <TextBox Grid.Row="1" Grid.Column="0"
                         x:Name="txtPicPath"
                         Style="{StaticResource FormTextBox_Local}"
                         IsReadOnly="True"
                         Tag="Picture path"/>

                <!-- Picture icon button -->
                <Button Grid.Row="1" Grid.Column="2"
                        x:Name="btnShowFileDialog"
                        Click="btnShowFileDialog_Click"
                        ToolTip="Choose pic"
                        Style="{StaticResource IconOnlyButton}">
                    <Image Source="{StaticResource picture}" Width="18" Height="18" Stretch="Uniform"/>
                </Button>

                <!-- Game folder -->
                <TextBox Grid.Row="2" Grid.Column="0"
                         x:Name="txtGameFolderPath"
                         Style="{StaticResource FormTextBox_Local}"
                         Tag="Game folder (opt.)">
                    <TextBox.ToolTip>
                        <ToolTip Background="#333333" BorderThickness="1"
                                 Foreground="White">
                            <TextBlock TextWrapping="Wrap">
                                If specified, GameTimeX will automatically get the exe and switch between profiles (enable in settings).
                            </TextBlock>
                        </ToolTip>
                    </TextBox.ToolTip>
                </TextBox>

                <!-- Folder icon button -->
                <Button Grid.Row="2" Grid.Column="2"
                        x:Name="btnShowFileDialogExe"
                        Click="btnShowFileDialogExe_Click"
                        ToolTip="Choose folder"
                        Style="{StaticResource IconOnlyButton}">
                    <Image Source="{StaticResource folder}" Width="18" Height="18" Stretch="Uniform"/>
                </Button>

                <!-- Save (volle Breite, kleine Top-/Bottom-Marge) -->
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                        x:Name="btnCreateNewProfile"
                        Content="Save"
                        Margin="0,8,0,2"
                        HorizontalAlignment="Stretch"
                        Click="btnCreateNewProfile_Click"
                        Style="{StaticResource NormalGuiButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
