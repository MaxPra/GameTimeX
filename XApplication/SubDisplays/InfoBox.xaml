<Window x:Class="GameTimeX.InfoBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Info"
        Width="460" Height="240"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Style="{StaticResource DefaultWindowStyle}"
        Loaded="Window_Loaded"
        UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="#2F2F2F"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0" Background="Black" CornerRadius="12,12,0,0" ClipToBounds="True"/>
            <TextBlock Grid.Row="0"
                       Text="Info"
                       Margin="10,0,0,0"
                       Foreground="White"
                       VerticalAlignment="Center"/>

            <!-- Inhalt -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="lblInfoText"
                           FontSize="18"
                           Text="Text"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Vollbreiter OK-Button -->
                <Button Grid.Row="2"
                        x:Name="btnOK"
                        Content="OK"
                        Height="38"
                        HorizontalAlignment="Stretch"
                        Click="btnOK_Click"
                        Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
