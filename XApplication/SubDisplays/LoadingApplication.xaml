<Window
    x:Class="GameTimeX.XApplication.SubDisplays.LoadingApplication"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoadingApplication"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">

    <!--  WindowChrome ohne Ecken-Interferenz  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <!--  Äußerer Rahmen (blau)  -->
    <Border
        Background="Transparent"
        BorderBrush="{DynamicResource ButtonDefaultBrush}"
        BorderThickness="1"
        CornerRadius="12"
        SnapsToDevicePixels="True">

        <!--  Inhaltshost, wird per Code-Behind rund geclippt  -->
        <Grid
            x:Name="ClipHost"
            Loaded="ClipHost_Loaded"
            RenderOptions.BitmapScalingMode="HighQuality"
            SizeChanged="ClipHost_SizeChanged"
            SnapsToDevicePixels="True">

            <!--  Hintergrund-Banner (keine Abdunkelung)  -->
            <Image Source="{StaticResource BannerSource}" Stretch="UniformToFill" />

            <!--  Zentrale Loading-Anzeige  -->
            <StackPanel
                x:Name="loadingArea"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0"
                Orientation="Horizontal"
                RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
                </StackPanel.RenderTransform>

                <TextBlock
                    Margin="0,0,10,0"
                    FontSize="36"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Loading">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="14"
                            Opacity="0.55"
                            ShadowDepth="0"
                            Color="#289AFC" />
                    </TextBlock.Effect>
                </TextBlock>

                <!--  Animierte Punkte  -->
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Ellipse
                        Width="10"
                        Height="10"
                        Margin="3,0"
                        Fill="#FFFFFFFF"
                        Opacity="0.25">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0.25"
                                            To="1.0"
                                            Duration="0:0:0.6" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse
                        Width="10"
                        Height="10"
                        Margin="3,0"
                        Fill="#FFFFFFFF"
                        Opacity="0.25">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard BeginTime="0:0:0.2" RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0.25"
                                            To="1.0"
                                            Duration="0:0:0.6" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse
                        Width="10"
                        Height="10"
                        Margin="3,0"
                        Fill="#FFFFFFFF"
                        Opacity="0.25">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard BeginTime="0:0:0.4" RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0.25"
                                            To="1.0"
                                            Duration="0:0:0.6" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </StackPanel>
            </StackPanel>

            <!--  Optionaler Info-Balken unten  -->
            <Border
                x:Name="InfoPanel"
                Margin="16"
                Padding="12"
                VerticalAlignment="Bottom"
                Background="#99000000"
                CornerRadius="8"
                Opacity="0"
                Visibility="Collapsed">
                <TextBlock
                    x:Name="InfoText"
                    FontSize="16"
                    Foreground="White"
                    Text=""
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="Wrap" />
            </Border>

            <!--  Fade-/Scale-In  -->
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="loadingArea"
                                Storyboard.TargetProperty="Opacity"
                                To="1"
                                Duration="0:0:0.28" />
                            <DoubleAnimation
                                Storyboard.TargetName="loadingArea"
                                Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                To="1"
                                Duration="0:0:0.28" />
                            <DoubleAnimation
                                Storyboard.TargetName="loadingArea"
                                Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                To="1"
                                Duration="0:0:0.28" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>
    </Border>
</Window>
