<Window
    x:Class="GameTimeX.XApplication.SubDisplays.MonitoringIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="16"
    Height="16"
    AllowsTransparency="True"
    Background="Transparent"
    Focusable="False"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None">

    <Ellipse
        Width="12"
        Height="12"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Fill="#2D8CFF"
        Stroke="#A0C8FF"
        StrokeThickness="1">

        <Ellipse.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Opacity="0.8"
                ShadowDepth="0"
                Color="#2D8CFF" />
        </Ellipse.Effect>
    </Ellipse>

</Window>
