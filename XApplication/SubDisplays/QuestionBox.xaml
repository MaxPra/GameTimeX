<Window x:Class="GameTimeX.QuestionBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTimeX"
        mc:Ignorable="d"
        Title="Info"
        Width="300" Height="150"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Style="{StaticResource DefaultWindowStyle}"
        Loaded="Window_Loaded"
        UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <!-- Außenrahmen mit Rundung -->
    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="#2F2F2F"
            SnapsToDevicePixels="True"
            Padding="0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0"
                    x:Name="titleBar"
                    Background="Black"
                    CornerRadius="12,12,0,0"
                    ClipToBounds="True"/>
            <TextBlock Grid.Row="0"
                       Text="Question"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0"
                       Foreground="White"/>


            <!-- Inhalt -->
            <Grid Grid.Row="1" x:Name="grdContent" Margin="22,18,22,18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Text -->
                <TextBlock x:Name="lblInfoText"
                           Text="Text"
                           TextWrapping="Wrap"
                           Foreground="White"
                           HorizontalAlignment="Stretch"
                           TextAlignment="Center"
                           Margin="0,0,0,0"
                           VerticalAlignment="Center"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                    <!-- Ja (rot) -->
                    <Button x:Name="btnYes"
                            Content="Yes"
                            Width="100" Height="36"
                            Margin="0,0,12,0"
                            BorderBrush="Black"
                            Background="{StaticResource ButtonCancelBrush}"
                            Click="btnYes_Click"
                            Foreground="White"
                            Style="{StaticResource CancelButton}"/>
                    <!-- Nein (blau) -->
                    <Button x:Name="btnNo"
                            Content="No"
                            Width="100" Height="36"
                            BorderBrush="Black"
                            Background="{StaticResource ButtonDefaultBrush}"
                            Click="btnNo_Click"
                            Foreground="White"
                            Style="{StaticResource NormalGuiButton}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
