<Window x:Class="GameTimeX.QuestionBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Question"
        Width="440" Height="230"
        MinWidth="420" MinHeight="210"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Style="{StaticResource DefaultWindowStyle}"
        Loaded="Window_Loaded"
        UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="#2F2F2F"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0" Background="Black" CornerRadius="12,12,0,0" ClipToBounds="True"/>
            <TextBlock Grid.Row="0"
                       Text="Question"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0"
                       Foreground="White"/>

            <!-- Inhalt -->
            <Grid Grid.Row="1" Margin="22">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Center-Layout -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="360">

                    <!-- Nachricht -->
                    <TextBlock x:Name="lblInfoText"
                               Text="Text"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="White"
                               FontSize="18"
                               Margin="0,0,0,16"/>

                    <!-- Actions -->
                    <Grid Cursor="">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                x:Name="btnYes"
                                Content="Yes"
                                Height="36"
                                Background="{StaticResource ButtonCancelBrush}"
                                BorderBrush="Black"
                                Foreground="White"
                                Click="btnYes_Click"
                                Style="{StaticResource CancelButton}"/>

                        <Button Grid.Column="2"
                                x:Name="btnNo"
                                Content="No"
                                Height="36"
                                Background="{StaticResource ButtonDefaultBrush}"
                                BorderBrush="Black"
                                Foreground="White"
                                Click="btnNo_Click"
                                IsCancel="True"
                                Style="{StaticResource NormalGuiButton}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
