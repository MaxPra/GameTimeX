<Window
    x:Class="GameTimeX.XApplication.SubDisplays.HappyNewYear"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Happy New Year"
    Width="670"
    Height="420"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource AppFontFamily}"
    FontSize="13"
    ResizeMode="NoResize"
    Style="{StaticResource DefaultWindowStyle}"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <FontFamily x:Key="AppFontFamily">Segoe UI Variable Text, Segoe UI</FontFamily>

        <Color x:Key="AccentBlue">#289AFC</Color>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}" />

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F2FFFFFF" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#C8FFFFFF" />

        <SolidColorBrush x:Key="WindowStrokeBrush" Color="#22FFFFFF" />

        <LinearGradientBrush x:Key="WindowBaseGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#FF0B0D10" />
            <GradientStop Offset="0.55" Color="#FF0A0C10" />
            <GradientStop Offset="1" Color="#FF090A0E" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WindowColorWashGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="#2218232B" />
            <GradientStop Offset="0.55" Color="#1A2B2A36" />
            <GradientStop Offset="1" Color="#26211B18" />
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="WindowVignetteBrush" Center="0.52,0.50" GradientOrigin="0.52,0.50" RadiusX="0.85" RadiusY="0.85">
            <GradientStop Offset="0" Color="#00000000" />
            <GradientStop Offset="0.60" Color="#00000000" />
            <GradientStop Offset="1" Color="#CC000000" />
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="WindowSoftHighlightBrush" Center="0.78,0.26" GradientOrigin="0.78,0.26" RadiusX="0.78" RadiusY="0.78">
            <GradientStop Offset="0" Color="#12289AFC" />
            <GradientStop Offset="0.38" Color="#08289AFC" />
            <GradientStop Offset="1" Color="#00000000" />
        </RadialGradientBrush>

        <DrawingBrush
            x:Key="SoftNoiseBrush"
            Opacity="0.045"
            TileMode="Tile"
            Viewport="0,0,160,160"
            ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#FFFFFFFF">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="12,18,1,1" />
                                <RectangleGeometry Rect="28,62,1,1" />
                                <RectangleGeometry Rect="64,20,1,1" />
                                <RectangleGeometry Rect="88,78,1,1" />
                                <RectangleGeometry Rect="104,44,1,1" />
                                <RectangleGeometry Rect="140,28,1,1" />
                                <RectangleGeometry Rect="18,132,1,1" />
                                <RectangleGeometry Rect="46,112,1,1" />
                                <RectangleGeometry Rect="118,120,1,1" />
                                <RectangleGeometry Rect="150,96,1,1" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <DrawingBrush x:Key="WindowBackgroundBrush" Stretch="Fill">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="{StaticResource WindowBaseGradient}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource WindowColorWashGradient}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource WindowSoftHighlightBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource SoftNoiseBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing Brush="{StaticResource WindowVignetteBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <LinearGradientBrush x:Key="PanelBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#8C0F1218" />
            <GradientStop Offset="1" Color="#6E0B0D12" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PanelInnerSheenBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#10FFFFFF" />
            <GradientStop Offset="0.35" Color="#06000000" />
            <GradientStop Offset="1" Color="#00000000" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="PanelStrokeBrush" Color="#1EFFFFFF" />
    </Window.Resources>

    <Border
        Background="{StaticResource WindowBackgroundBrush}"
        BorderBrush="{StaticResource WindowStrokeBrush}"
        BorderThickness="1"
        CornerRadius="12"
        SnapsToDevicePixels="True">

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="22"
                ShadowDepth="0"
                Color="#AA000000" />
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Titlebar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,12"
                BorderBrush="#18FFFFFF"
                BorderThickness="1"
                CornerRadius="10"
                SnapsToDevicePixels="True">
                <Grid ClipToBounds="True">
                    <Rectangle Fill="{StaticResource PanelBackgroundBrush}" />
                    <Rectangle Fill="{StaticResource PanelInnerSheenBrush}" />
                    <Rectangle Fill="{StaticResource WindowSoftHighlightBrush}" Opacity="0.85" />

                    <DockPanel Margin="6,2" LastChildFill="True">
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            Text="🎉 Happy New Year" />
                    </DockPanel>
                </Grid>
            </Border>

            <!--  Content  -->
            <Border
                Grid.Row="1"
                BorderBrush="{StaticResource PanelStrokeBrush}"
                BorderThickness="1"
                CornerRadius="12"
                SnapsToDevicePixels="True">
                <Grid ClipToBounds="True">
                    <Rectangle Fill="{StaticResource PanelBackgroundBrush}" />
                    <Rectangle Fill="{StaticResource PanelInnerSheenBrush}" />
                    <Rectangle Fill="{StaticResource SoftNoiseBrush}" Opacity="0.03" />

                    <StackPanel
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Border
                            Width="212"
                            Height="212"
                            Background="#24000000"
                            BorderBrush="#20FFFFFF"
                            BorderThickness="1"
                            CornerRadius="18"
                            SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="16"
                                    Direction="315"
                                    ShadowDepth="2"
                                    Color="#55000000" />
                            </Border.Effect>
                            <Border ClipToBounds="True" CornerRadius="16">
                                <Image
                                    Width="200"
                                    Height="200"
                                    Margin="6"
                                    Source="{StaticResource happyNewYear}"
                                    Stretch="Uniform" />
                            </Border>
                        </Border>

                        <TextBlock
                            Margin="0,18,0,0"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            Text="GameTimeX wishes you a Happy New Year!"
                            TextAlignment="Center" />

                        <TextBlock
                            Margin="0,6,0,0"
                            FontSize="13"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Text="Wishing you health and success."
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Footer  -->
            <Grid Grid.Row="2" Margin="0,14,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Height="1"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center"
                    Background="#18FFFFFF" />

                <Button
                    x:Name="btnCloseBottom"
                    Grid.Column="1"
                    Width="120"
                    Height="36"
                    Click="btnClose_Click"
                    Content="Close"
                    Style="{StaticResource NormalGuiButton}" />
            </Grid>
        </Grid>
    </Border>
</Window>
