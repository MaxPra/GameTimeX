<Window x:Class="GameTimeX.XApplication.SubDisplays.ManageExecutables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Executables"
        Width="560" Height="500"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        Style="{StaticResource DefaultWindowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            Background="#2F2F2F"
            CornerRadius="12"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0" Background="Black" CornerRadius="12,12,0,0" ClipToBounds="True"/>
            <TextBlock Grid.Row="0" Text="Executables" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"/>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" Content="X" Width="40" Height="30"
                        Foreground="White" Background="Transparent" BorderBrush="Transparent"
                        Click="btnClose_Click" Style="{StaticResource NoMouseOverButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Info text -->
            <TextBlock Grid.Row="1"
                       Margin="22,18,22,4"
                       Foreground="#BBBBBB"
                       TextWrapping="Wrap"
                       Text="Select which executables are active. Toggle items and save your selection." />

            <!-- Checkbox 'All' -->
            <CheckBox Grid.Row="1"
                      Margin="25,42,22,0"
                      Content="All"
                      Style="{StaticResource CheckBoxDefaultStyle}"
                      IsChecked="{Binding IsAllChecked, Mode=TwoWay}"/>

            <!-- Executables list -->
            <Border Grid.Row="2" Margin="22" Background="#3A3A3A" CornerRadius="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ItemsExecutables" ItemsSource="{Binding Executables}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox
                                    Style="{StaticResource CheckBoxDefaultStyle}"
                                    IsChecked="{Binding IsActive, Mode=TwoWay}"
                                    Content="{Binding Name}"
                                    Margin="8,6"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Save button -->
            <Grid Grid.Row="3" Margin="22,0,22,22">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        x:Name="btnSave"
                        Content="Save"
                        Width="200" Height="42"
                        HorizontalAlignment="Right"
                        Click="btnSave_Click"
                        BorderBrush="Black" Background="#0099ff"
                        Foreground="White"
                        Style="{StaticResource NormalGuiButton}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
