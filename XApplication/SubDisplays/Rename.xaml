<Window x:Class="GameTimeX.Rename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Rename Profile"
        Width="360" Height="190"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        Style="{StaticResource DefaultWindowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <sys:Double x:Key="FormControlHeight">32</sys:Double>
        <Thickness x:Key="FormRowSpacing">0,3,0,3</Thickness>

        <!-- lokaler TextBox-Style wie in den anderen Fenstern -->
        <Style x:Key="FormTextBox_Local" TargetType="TextBox" BasedOn="{StaticResource FormTextBox}">
            <Setter Property="Height" Value="{StaticResource FormControlHeight}"/>
            <Setter Property="Margin" Value="{StaticResource FormRowSpacing}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            Background="#2F2F2F"
            CornerRadius="12"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0" Background="Black" CornerRadius="12,12,0,0" ClipToBounds="True"/>
            <TextBlock Grid.Row="0" Text="Rename profile" Margin="10,0,0,0"
                       VerticalAlignment="Center" Foreground="White"/>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" Content="X" Width="40" Height="28"
                        Foreground="White" Background="Transparent" BorderBrush="Transparent"
                        Click="btnClose_Click" Style="{StaticResource NoMouseOverButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Inhalt -->
            <Grid Grid.Row="1" Margin="18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- TextBox -->
                    <RowDefinition Height="*"/>
                    <!-- Füller -->
                    <RowDefinition Height="Auto"/>
                    <!-- Save -->
                </Grid.RowDefinitions>

                <!-- Profile name -->
                <TextBox Grid.Row="0"
                         x:Name="txtProfileName"
                         Style="{StaticResource FormTextBox_Local}"
                         Tag="Profile name"/>

                <!-- Save-Button volle Breite -->
                <Button Grid.Row="2"
                        x:Name="btnRename"
                        Content="Save"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,2"
                        Click="btnRenameProfile_Click"
                        Style="{StaticResource NormalGuiButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
