<Window x:Class="GameTimeX.ImageCropper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTimeX"
        mc:Ignorable="d"
        x:Name="imageCropperWindow"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Style="{StaticResource DefaultWindowStyle}"
        WindowStyle="None"
        Title="Settings"
        Height="500" Width="800" MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        PreviewMouseWheel="imageCropperWindow_PreviewMouseWheel">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <!-- Außenrahmen + Abrundung -->
    <Border BorderBrush="{DynamicResource ButtonDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Background="#2F2F2F"
            SnapsToDevicePixels="True"
            Padding="0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Grid.Row="0"
                    x:Name="titleBar"
                    Background="Black"
                    CornerRadius="12,12,0,0"
                    ClipToBounds="True"
                    MouseDown="titleBar_MouseDown"/>
            <TextBlock Grid.Row="0"
                       Text="Crop Profile Image"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0"
                       Foreground="White"/>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" Content="X" Width="40" Height="30"
                        BorderBrush="Transparent" Background="Transparent"
                        Click="btnClose_Click" Foreground="White"
                        MouseEnter="btnClose_MouseEnter" Style="{StaticResource NoMouseOverButtonStyle}"
                        MouseLeave="btnClose_MouseLeave">
                    <!-- abgerundete Ecke oben rechts beim Hover -->
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="0,12,0,0"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="Red"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#CC0000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Inhalt (unverändert) -->
            <Grid Grid.Row="1" x:Name="grdContent" HorizontalAlignment="Left">
                <Image x:Name="imgProfilePic"/>
                <Canvas x:Name="cvsCropper"
                        Background="Transparent"
                        MouseDown="Canvas_MouseDown"
                        MouseUp="Canvas_MouseUp"
                        MouseMove="Canvas_MouseMove">
                    <Rectangle x:Name="recTransformArea"
                               Fill="Transparent"
                               Stroke="White"
                               StrokeThickness="2"
                               Width="300"
                               Height="300"
                               Canvas.Left="0"
                               Canvas.Top="0"/>
                </Canvas>
            </Grid>
        </Grid>
    </Border>
</Window>
