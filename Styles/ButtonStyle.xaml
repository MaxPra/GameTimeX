<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Farben (Primär / Hover / Pressed)  -->
    <Color x:Key="ButtonDefaultColor">#FF2B86F6</Color>
    <Color x:Key="ButtonHoverColor">#FF4AA3FF</Color>
    <Color x:Key="ButtonPressedColor">#FF1E67C8</Color>

    <!--  Glasige Primär-Brushes  -->
    <LinearGradientBrush x:Key="ButtonDefaultBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="#FF5BB8FF" />
        <GradientStop Offset="0.55" Color="#FF2B86F6" />
        <GradientStop Offset="1.00" Color="#FF1E67C8" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonHoverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="#FF79C6FF" />
        <GradientStop Offset="0.55" Color="#FF4AA3FF" />
        <GradientStop Offset="1.00" Color="#FF2B86F6" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonPressedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="#FF3A96FF" />
        <GradientStop Offset="0.55" Color="#FF1E67C8" />
        <GradientStop Offset="1.00" Color="#FF164E9A" />
    </LinearGradientBrush>

    <!--  Glow / Text  -->
    <SolidColorBrush x:Key="Btn.Glow" Color="#803BC8FF" />
    <SolidColorBrush x:Key="Btn.Text" Color="#FFFFFFFF" />

    <!--  Farben (Cancel/Danger)  -->
    <LinearGradientBrush x:Key="ButtonCancelBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="#FFFF6A6A" />
        <GradientStop Offset="0.55" Color="#FFE43B3B" />
        <GradientStop Offset="1.00" Color="#FFB81F1F" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonCancelHoverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="#FFFF7F7F" />
        <GradientStop Offset="0.55" Color="#FFFF4D4D" />
        <GradientStop Offset="1.00" Color="#FFE43B3B" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonCancelPressedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="#FFFF5A5A" />
        <GradientStop Offset="0.55" Color="#FFB81F1F" />
        <GradientStop Offset="1.00" Color="#FF8E1414" />
    </LinearGradientBrush>

    <!--  Kleine Hilfs-Brushes  -->
    <SolidColorBrush x:Key="StrokeBrush" Color="#26FFFFFF" />

    <!--  Moderner Primärbutton  -->
    <!--  PrimaryButton  -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="18,8" />
        <Setter Property="MinHeight" Value="34" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Background" Value="{DynamicResource ButtonDefaultBrush}" />
        <Setter Property="BorderThickness" Value="0" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="Root" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>

                        <Border
                            x:Name="Base"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4" />

                        <Border
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4" />

                        <Border
                            Margin="1"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1"
                            CornerRadius="3"
                            Opacity="0.6" />

                        <ContentPresenter
                            Margin="10,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Base" Property="Background" Value="{DynamicResource ButtonHoverBrush}" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Base" Property="Background" Value="{DynamicResource ButtonPressedBrush}" />
                            <Setter TargetName="Root" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



